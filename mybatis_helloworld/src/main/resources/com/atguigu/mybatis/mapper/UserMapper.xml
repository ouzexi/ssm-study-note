<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mybatis.mapper.UserMapper">

<!--
    mapper接口和映射文件要保证2个一致：
    1、mapper接口的全类名和映射文件的namespace一致
    2、mapper接口中的方法名和映射文件中的sql的id保持一致
-->
<!--  int insertUser();  方法名与id保持一致  -->
    <insert id="insertUser">
        insert into t_user values(null, 'admin', '123456', 23, '男', '12345@qq.com')
    </insert>

<!--    void updateUser();  -->
    <update id="updateUser">
        update t_user set username = 'root', password = '123' where id = 3
    </update>

<!--    void deleteUser();  -->
    <delete id="deleteUser">
        delete from t_user where id = 3
    </delete>

<!--    User getUserById();  -->
<!--
   resultType：设置结果类型，即查询的数据要转换为的java类型
   resultMap：自定义映射，处理 多对一 或 一对多 等的映射关系
  -->
<!--  设置resultType的路径为全类名，即返回类型为User实体类  -->
    <select id="getUserById" resultType="com.atguigu.mybatis.pojo.User">
        select * from t_user where id = 1
    </select>

<!--    List<User> getAllUser();  -->
<!--  返回的结果先放到实体类User中，再放到集合List中，所以resultType还是User  -->
    <select id="getAllUser" resultType="abc">
        select * from t_user
    </select>
</mapper>